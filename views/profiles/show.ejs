<%- include('../partials/header')%>

<div class="header">
    <div id="welcome">
      <pre id="headerText">welcome.md       X  </pre>
    </div>
    
    <div id="userProfile">
      <pre id="headerText">  User-Profile.md   X  </pre>
    </div>
  </div>
  
  <div class="main">
    <div id="profileGrid">
        <div id="userContent"> 
            <img src='<%= profile.images.length > 0 ? profile.images[0]?.url : "/stylesheets/defaultImage.png" %>'>
            <div id="userDisplay">
            <div id="userName"><%=profile.name%></div> |
            <div id="userPronouns"><%= profile.pronouns %></div> |
            <div id="userJob"> <%= profile.jobTitle %></div> 
            </div>
        </div>
        <div id="userDetails">  
        <h1><%=profile.name%>, <%= age %></h1>
          <div id="userForm">
                <div>Lives In: <%= profile.location %></div>
                <div>Looking for: <%= profile.desires %></div>
                <div>About: <%= profile.aboutMe %></div>
                <div>Preferred Languages: <%= profile.languages %></div>
                <div>Job Title: <%= profile.jobTitle %></div>

                <form action="/profiles/<%= profile._id %>?_method=PUT" method="POST">
                  <button class="bttn" type="submit">LIKE</button>
                </form>
                <form action="/profiles/dislike/<%= profile._id %>?_method=PUT" method="POST">
                  <button id="dislikeBttn" type="submit">DISLIKE</button>
                </form>
                <!-- <div id="likeInfo">*If you and <#=profile.name%> like each other you can continue the conversation in a private chat room! -->
                </div>
            </div>
        </div>
    </div>
  </div>
  
<%- include('../partials/footer')%>