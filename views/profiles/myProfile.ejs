<%- include('../partials/header')%>

<div class="header">
    <div id="welcome">
      <pre id="headerText">welcome.md       X  </pre>
    </div>
    
    <div id="userProfile">
      <pre id="headerText"> Your-Profile.md   X  </pre>
    </div>
  </div>
  
  <div class="main">
    <div id="profileGrid">
        <div id="userContent" style="background-image: url(<%=profile.images%>); 
                                     background-repeat: no-repeat; 
                                     background-size: cover;">
            <div id="userDisplay">
            <div id="userName"><%=profile.name%></div> |
            <div id="userPronouns"><%= profile.pronouns %></div> |
            <div id="userJob"> <%= profile.jobTitle %></div> 
            </div>
        </div>
        <div id="userDetails">  
          <h1>Nice profile, <%= profile.name %>!</h1>
           <h3>Your Stats are below:</h3>
            <div id="userGrid">
                <div><%= profile.birthday.toLocaleDateString('en-US') %></div>
                <div>Lives In: <%= profile.location %></div>
                <div>Looking for: <%= profile.desires %></div>
                <div>About: <%= profile.aboutMe %></div>
                <div>Preferred Languages: <%= profile.languages %></div>
                <div>Job Title: <%= profile.jobTitle %></div>
                <div><img src="<%= profile.images[0]?.url %>"></div>
                    <a class="bttn" href="/profiles/me/edit" role="button">
                        <p>EDIT PROFILE </p>
                    </a>
                    <a class="bttn"href="/profiles/me/addPhoto"><p>ADD PHOTO</p> </a>
                    <a href="me/delete" id="dislikeBttn" role="button"> 
                      <p>SAY GOODBYE</p>
                    </a>
            </div>
        </div>
    </div>
  </div>
  

<%- include('../partials/footer')%>